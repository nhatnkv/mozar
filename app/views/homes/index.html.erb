<!-- Slider  -->
<div class="timer-product-carousel-area">
  <div class="container">
    <div class="section-padding">
      <div class="row">
        <div class="col-md-12">
          <div class="section-title"><h2>Sale Off</h2></div>
        </div>
      </div>
      <div class="row">
        <div class="product-carousel">
          <% @products.each do |product| %>
            <% product.images.limit(1).each do |image|%>
              <div class="col-md-3">
                <!--item 1 start-->
                <div class="single-product-item">
                  <div class="sale-product-label"><span>sale</span></div>
                  <div class="single-product clearfix">
                    <%= link_to product_detail_path(product.id), method: :get do %>
                      <span class="image-home">
                        <%= image_tag image.img.url(:img_540x728) %>
                      </span>
                      <div class="timer">
                        <div data-countdown="2022/01/01" class="timer-grid"></div>
                      </div>
                    <% end %>
                  </div>
                  <h2 class="single-product-name"><a href="#">Aliquam consequat</a></h2>
                  <div class="price-box">
                    <p class="old-price">
                      <span class="price">$999.00</span>
                    </p>
                    <p class="special-price">
                      <span class="price">$944.00</span>
                    </p>                      
                  </div>
                </div><!--end of item 1-->
              </div>
            <% end %><!--end of col-md-3-->
          <% end %>
        </div>
      </div>
    </div>    
  </div>
</div>
<div class="banner-area">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-8 col-sm-8 hidden-xs">
        <div class="banner-box">
          <a href="#">
            <img src="/assets/banner/6.jpg" alt="">
          </a>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="banner-box">
          <a href="#">
            <img src="/assets/banner/7.jpg" alt="">
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="product-area-home-three">
  <div class="container">
    <div class="section-top-padding"> 
      <div class="row">
        <div class="col-md-12">
          <div class="section-title"><h2>New Products</h2></div>
        </div>
      </div>
      <div class="row">
        <div class="product">
          <% @products.each do |product| %>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
              <div class="single-product-item">
                <div class="new-product-label"><span>new</span></div>
                <div class="single-product clearfix">
                  <%= link_to product_detail_path(product.id), method: :get do %>
                    <span class="product-image">
                      <%= image_tag image_url(product.images, "main") %>
                    </span>
                    <span class="product-image hover-image">
                      <img src="/assets/product/8.jpg" class="image_160x215" alt="" class="image_160x215">
                    </span>
                  <% end %>
                  <div class="button-actions clearfix"> 
                    <%= button_to line_items_path(line_item:{product_id: product}), name: "line_item[]", class: "button add-to-cart", remote: true do %>
                      <span><i class="fa fa-shopping-cart"></i></span>
                    <% end %>
                    <ul class="add-to-links">
                      <li class="quickview">
                        <%= link_to product_show_path(id: product.id), method: :get, remote: true, class: "btn-quickview modal-view" do %>
                          <i class="fa fa-search-plus"></i>
                        <% end %>
                      </li>
                      <li>
                        <a class="link-wishlist" href="wishlist.html">
                          <i class="fa fa-heart"></i>
                        </a>
                      </li>                                                         <li>
                        <a class="link-compare" href="#">
                          <i class="fa fa-retweet"></i>
                        </a>
                      </li>                       
                    </ul>
                  </div>
                </div>
                <h2 class="single-product-name"><a href="#">Fusce aliquam</a></h2>
                <div class="price-box">
                  <p class="special-price">
                    <span class="price">$123.00</span>
                  </p>                      
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>      
  </div>
</div>
