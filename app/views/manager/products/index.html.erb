<p id="notice"><%= notice %></p>

<h1>Manager Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Tag</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <% product.images.each do |image| %>
          <td><%= image_tag image.url, height: 50, width: 50 %></td>
        <% end %>
        <td><%= product.quantity %></td>
        <td><%= product.status %></td>
        <td><%= product.tag %></td>
        <td><%= product.category_id %></td>
        <td><%= link_to 'Show', manager_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_manager_product_path(product) %></td>
        <td><%= link_to 'Destroy', manager_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

