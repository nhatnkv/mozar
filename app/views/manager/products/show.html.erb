<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<% @product.images.each_with_index do |image, index| %>
  <p>
    <strong>Image <%= index += 1 %></strong>
    <%= image_tag image.url, height: 100, width: 100 %>
  </p>
<% end %>
<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Status:</strong>
  <%= @product.status %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @product.tag %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>

<%= link_to 'Edit', edit_manager_product_path(@product) %> |
<%= link_to 'Back', manager_products_path %>
